<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/middleBlue"
        app:layout_paddingPercent="4%w"
        app:layout_textSizePercent="6%w"/>
    <View style="@style/HorizontalViewSty"/>


    <Button
        android:id="@+id/bt_confirm_modifyPayPassWordDig"
        style="@style/LoginFragButtonSty"
        android:clickable="false"
        android:text="确定"
        app:layout_heightPercent="7%h"
        app:layout_marginBottomPercent="2%h"/>
</com.zhy.android.percent.support.PercentLinearLayout>