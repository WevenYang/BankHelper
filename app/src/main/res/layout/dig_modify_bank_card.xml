<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/middleBlue"
        app:layout_paddingPercent="4%w"
        app:layout_textSizePercent="6%w"/>
    <View style="@style/HorizontalViewSty"/>
    <EditText
        android:id="@+id/et_enterOriginalPassWord_modifyPayPassWordDig"
        style="@style/PassWordEditTextSty"
        android:digits="@string/figureFilter"
        android:hint="银行卡卡号"
        android:inputType="textPassword"
        android:maxLength="16"
        android:visibility="visible"
        app:layout_heightPercent="15%w"/>
    <View style="@style/HorizontalViewSty"/>
    <EditText
        android:id="@+id/et_enterNewPassWord_modifyPayPassWordDig"
        style="@style/PassWordEditTextSty"
        android:digits="@string/figureFilter"
        android:hint="密码"
        android:inputType="textPassword"
        android:visibility="visible"
        android:maxLength="6"
        app:layout_heightPercent="15%w"/>
    <View style="@style/HorizontalViewSty"/>
    <EditText
        android:id="@+id/et_enterNewPassWordAgain_modifyPayPassWordDig"
        style="@style/PassWordEditTextSty"
        android:digits="@string/figureFilter"
        android:hint="银行卡绑定的联系人姓名"
        android:inputType="textPassword"
        android:visibility="visible"
        app:layout_heightPercent="15%w"/>
    <View style="@style/HorizontalViewSty"/>
    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_forgetPassword_modifyPayPassWordDig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/sel_common_press_effect3"
            android:text="忘记密码？"
            android:textColor="@color/middleBlue"
            app:layout_paddingPercent="4%w"
            app:layout_textSizePercent="4.5%w"/>
    </com.zhy.android.percent.support.PercentFrameLayout>
    <Button
        android:id="@+id/bt_confirm_modifyPayPassWordDig"
        style="@style/LoginFragButtonSty"
        android:clickable="false"
        android:text="绑定"
        app:layout_heightPercent="7%h"
        app:layout_marginBottomPercent="2%h"/>
</com.zhy.android.percent.support.PercentLinearLayout>