<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.example.weven.bankapp.View.CommonToolBar
        android:id="@+id/cb_title_aboutPuHuiAcy"
        style="@style/CommonToolBarSty"
        app:isLeftImgClickToFinishAcy="true"
        app:middleText="关于">
    </com.example.weven.bankapp.View.CommonToolBar>
    <View
        style="@style/HorizontalViewSty"
        android:layout_below="@+id/cb_title_aboutPuHuiAcy"/>
    <com.example.weven.bankapp.View.TextViewPlus
        android:id="@+id/tvp_flag_aboutPuHuiAcy"
        style="@style/LeftTextViewPlusStyMineFrag"
        android:layout_below="@+id/cb_title_aboutPuHuiAcy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:drawableLeft="@mipmap/nav_icon"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        app:layout_marginTopPercent="9%h"
        app:layout_textSizePercent="6%w"
        app:leftImgHeightScale="0.08"
        app:leftImgWidthScale="0.08"/>
    <TextView
        android:id="@+id/tv_versionCode_aboutPuHuiAcy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvp_flag_aboutPuHuiAcy"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="版本：V1.0"
        android:textColor="@color/deepGrey"
        app:layout_marginTopPercent="3%h"
        app:layout_textSizePercent="4.8%w"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="CopyRight 2018-2019\n银行小不懂 提供技术支持"
        android:textColor="@color/colorPrimary"
        app:layout_marginBottomPercent="4%h"
        app:layout_textSizePercent="4.8%w"/>
</com.zhy.android.percent.support.PercentRelativeLayout>