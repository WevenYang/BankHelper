<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_messages_icon"
            android:src="@drawable/ic_launcher_background"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.5%w"
            app:layout_paddingLeftPercent="2.5%w"
            app:layout_widthPercent="12%w"
            app:layout_heightPercent="12%w"
        />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_paddingPercent="2.5%w"
        >

            <TextView
                android:id="@+id/tv_messages_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="5%w"
                android:textColor="@color/black"
                android:text="课前通知"
            />

            <TextView
                android:id="@+id/tv_messages_time"
                android:layout_alignParentRight="true"
                android:text="2017-03-13 16:23"
                app:layout_textSizePercent="5%w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <TextView
                android:layout_alignLeft="@+id/tv_messages_content"
                android:layout_below="@+id/tv_messages_type"
                android:textColor="@color/black"
                android:text="老师发布了《葵花宝典》课程预习内容"
                android:id="@+id/tv_messages_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        style="@style/HorizontalViewSty"
    />

</com.zhy.android.percent.support.PercentLinearLayout>