<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    android:id="@+id/rl_commonToolBar"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:visibility="gone"
        android:background="@drawable/sel_common_press_effect3"
        android:id="@+id/iv_leftImg_commonToolBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/back"
        app:layout_paddingPercent="4%w"
        app:layout_widthPercent="15%w"/>

    <TextView
        android:id="@+id/tv_leftTitle_commonToolBar"
        style="@style/CommonToolBarTextViewStyle"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        app:layout_paddingPercent="3%w"
        app:layout_textSizePercent="35.5%h"/>
    <TextView
        android:id="@+id/tv_middleTitle_commonToolBar"
        style="@style/CommonToolBarTextViewStyle"
        android:layout_centerInParent="true"
        app:layout_paddingPercent="3%w"
        app:layout_textSizePercent="40%h"/>

    <ImageView
        android:visibility="gone"
        android:background="@drawable/sel_common_press_effect3"
        android:id="@+id/iv_rightImg_commonToolBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:layout_paddingPercent="4%w"
        app:layout_widthPercent="15%w"/>
    <TextView
        android:background="@drawable/sel_common_press_effect3"
        android:id="@+id/tv_rightTitle_commonToolBar"
        style="@style/CommonToolBarTextViewStyle"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        app:layout_paddingPercent="3%w"
        app:layout_textSizePercent="35.5%h"/>
</com.zhy.android.percent.support.PercentRelativeLayout>